doctype html
html
  head
    title Upload
    meta(charset='utf-8')
    style.
      html {
      min-height: 100%;
      }
      body {
      background: linear-gradient(to top, #faaca8, #ddd6f3);
      font-family: Arial;
      }
      select {
      width: 25%;
      padding: 8px;
      margin: 4px;
      }
      input[type=text] {
      width: 50%;
      padding: 8px;
      margin: 4px;
      }
      input[type=file] {
      width: 50%;
      padding: 8px;
      margin: 4px;
      background: #ffffff;
      }
      textarea {
      width: 75%;
      height: 150px;
      margin: 4px;
      padding: 8px;
      }
      input[type=submit] {
      margin: 4px;
      padding: 8px;
      }
  body
    form(action='/upload' method='post' enctype='multipart/form-data')
      select(name='category')
        option(value='places') Places
        option(value='cafes') Cafes & Restaurants
        option(value='suburb') Suburb
      br
      input(type='text' name='title' placeholder='Put your title here')
      br
      br
      input(type='file' name='userfile' placeholder='Put your image here')
      br
      br
      textarea(name='text' placeholder='Put your comment here')
      br
      input(type='submit' value='Publish')
