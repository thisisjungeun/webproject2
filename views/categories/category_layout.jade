doctype html
html
  head
    meta(charset='utf-8')
    style.
      html {
      min-height: 100%;
      }
      body {
      background: linear-gradient(to top, #ffafbd, #c9ffbf);
      font-family: Arial;
      }
      #menubar {
      margin: 50px;
      padding: 0px;
      list-style: none;
      }
      #menubar li {
      float: left;
      width: 250px;
      height: 40px;
      background: #ff80bf;
      color: #ffffff;
      opacity: .8;
      text-align: center;
      line-height: 40px;
      font-weight: 900;
      }
      #menubar li a {
      text-decoration: none;
      color: #ffffff;
      font-weight: 900;
      }
      #list li {
        list-style: none;
        color: #000000;
      }
      #list li a {
      text-decoration: none;
      color: #000000;
      }
      h1 {
      text-align: center;
      color: #ffafbd;
      }
      div {
      float: left;
      margin: 10px;
      padding: 5px;
      background: #ff4d88;
      color: : #ffffff;
      text-align: center;
      }
      div a {
      text-decoration: none;
      color: #ffffff;
      }
    block title
      title defaultTitle
  body
    include ../includes/hyperlinks.jade
    br
    br
    div
      a(href='/upload') Write a Post
